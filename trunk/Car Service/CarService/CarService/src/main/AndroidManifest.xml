<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="pl.rzeszow.wsiz.carservice">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name="pl.rzeszow.wsiz.carservice.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"/>
        <activity
            android:name="pl.rzeszow.wsiz.carservice.Login"
            android:label="@string/app_name"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="pl.rzeszow.wsiz.CLEARSCREEN" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="pl.rzeszow.wsiz.carservice.Splash"
            android:label="@string/title_activity_splash"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="pl.rzeszow.wsiz.carservice.Register"
            android:label="@string/title_activity_register"
            android:screenOrientation="portrait"/>
        <activity
            android:name="pl.rzeszow.wsiz.carservice.Guest"
            android:label="@string/title_activity_guest"
            android:screenOrientation="portrait"/>
    </application>

</manifest>
